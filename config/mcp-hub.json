{
  "mcpServers": {
    "context7": {
      "command": "pnpx",
      "args": [
        "@upstash/context7-mcp",
        "--api-key",
        "${env:CONTEXT7_API_KEY}"
      ]
    },
    "shadcn": {
      "command": "pnpx",
      "args": ["shadcn", "mcp"]
    },
    "tavily": {
      "command": "pnpx",
      "args": ["tavily-mcp"],
      "env": {
        "TAVILY_API_KEY": "${env:TAVILY_API_KEY}"
      }
    },
    "pixabay": {
      "command": "pnpx",
      "args": ["@kira4i/pixabay-mcp-server"],
      "env": {
        "PIXABAY_API_KEY": "${env:PIXABAY_API_KEY}"
      }
    },
    "unsplash": {
      "command": "pnpx",
      "args": ["@violent-madman/unsplash-mcp"],
      "env": {
        "UNSPLASH_ACCESS_KEY": "${env:UNSPLASH_ACCESS_KEY}"
      }
    }
  }
}
